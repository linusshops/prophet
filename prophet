#!/usr/bin/env php
<?php
/**
 * Magento Module test harness
 *
 * @author Sam Schmidt
 * @date 2015-04-17
 * @company Linus Shops
 */

if (!ini_get('date.timezone')) {
    ini_set('date.timezone', 'UTC');
}

$composerPaths = array(
    __DIR__ . '/../../autoload.php',
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/vendor/autoload.php'
);

foreach ($composerPaths as $file) {
    if (file_exists($file)) {
        define('PROPHET_COMPOSER_INSTALL', $file);
        break;
    }
}

unset($file);

if (!defined('PROPHET_COMPOSER_INSTALL')) {
    fwrite(
        STDERR,
        'You need to set up the project dependencies using the following commands:' . PHP_EOL .
        'wget http://getcomposer.org/composer.phar' . PHP_EOL .
        'php composer.phar install' . PHP_EOL
    );
    die(1);
}

require PROPHET_COMPOSER_INSTALL;
require 'PD.php';

$composer = json_decode(file_get_contents(__DIR__.'/composer.json'), true);

define('PROPHET_ROOT_DIR', __DIR__);

use Symfony\Component\Console\Application;

$application = new Application();

$application->setName('Prophet');
$application->setVersion('0.7.3');
$application->setDefaultCommand('run');

\LinusShops\Prophet\ConfigRepository::setProphetPath($_SERVER['argv'][0]);

//Load plugins
\LinusShops\Prophet\PluginRepository::load();

//Test framework implementations
$application->add(new LinusShops\Prophet\Commands\Run());
$application->add(new LinusShops\Prophet\Commands\Scry\PhpUnit());
$application->add(new LinusShops\Prophet\Commands\Scry\Behat());

//Test setup
$application->add(new LinusShops\Prophet\Commands\Validate());
$application->add(new LinusShops\Prophet\Commands\Analyze());
$application->add(new LinusShops\Prophet\Commands\Init());
$application->add(new LinusShops\Prophet\Commands\Inspect());
$application->add(new \LinusShops\Prophet\Commands\Show());

//Utilities
$application->add(new LinusShops\Prophet\Commands\IdeHelper());

//Frameworks
$application->add(new \LinusShops\Prophet\Commands\Framework\Install());

//Plugins
$application->add(new \LinusShops\Prophet\Commands\Plugin\Show());
$application->add(new \LinusShops\Prophet\Commands\Plugin\Install());
$application->add(new \LinusShops\Prophet\Commands\Plugin\Update());
$application->add(new \LinusShops\Prophet\Commands\Plugin\Remove());

$application->run();
